{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/modules*": ["./src/modules"],
      "@/constants*": ["./src/constants"],
      "@/database*": ["./src/database"]
    }
  }
}
